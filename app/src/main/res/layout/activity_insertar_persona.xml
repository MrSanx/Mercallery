<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InsertarPersona">

    <EditText
        android:id="@+id/NombreP"
        android:layout_width="199dp"
        android:layout_height="27dp"
        tools:layout_editor_absoluteX="93dp"
        tools:layout_editor_absoluteY="79dp" />

    <EditText
        android:id="@+id/DocumentoP"
        android:layout_width="199dp"
        android:layout_height="27dp"
        android:layout_marginTop="46dp"
        app:layout_constraintTop_toBottomOf="@+id/NombreP"
        tools:layout_editor_absoluteX="93dp" />

    <CalendarView
        android:id="@+id/fechaN"
        android:layout_width="344dp"
        android:layout_height="318dp"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="302dp" />

    <Button
        android:id="@+id/registrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Registrar"
        app:layout_constraintTop_toBottomOf="@+id/fechaN"
        tools:layout_editor_absoluteX="147dp" />

    <Spinner
        android:id="@+id/tipoPersona"
        android:layout_width="254dp"
        android:layout_height="34dp"
        tools:layout_editor_absoluteX="78dp"
        tools:layout_editor_absoluteY="224dp" />
</androidx.constraintlayout.widget.ConstraintLayout>